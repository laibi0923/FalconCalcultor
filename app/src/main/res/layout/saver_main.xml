<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/blue_grey_950">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<EditText
				android:singleLine="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="true"
				android:imeOptions="actionDone"
				android:textColor="@color/TextColor_White"
				android:id="@+id/product_name"
				android:hint="@string/hints_product_name"
				android:padding="15dp"
				android:textColorHint="@color/TextColor_Gray"
				android:background="@color/blue_grey_950" />

		</LinearLayout>

		<LinearLayout

			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/blue_grey_900"
			android:elevation="4dp">

			<LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:gravity="center"
                android:background="@color/blue_grey_900">

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_credit_card_black_24dp"
                    android:tint="@color/deep_teal_200"
                    android:id="@+id/product_type_icon"
                    android:cropToPadding="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/product_type_name"
                    android:textColor="@color/deep_teal_200" />
            </LinearLayout>

			<include
				android:id="@+id/product_status"
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

			<include
				android:id="@+id/loan_number"
				layout="@layout/saver_dialog_sub_ed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

		</LinearLayout>

		<LinearLayout
			android:background="@color/blue_grey_900"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="4dp"
			android:orientation="vertical"
			android:layout_marginTop="10dp">

			<include
				android:id="@+id/loan_amount"
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

			<include
				android:id="@+id/loan_rate"
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

			<include
				android:id="@+id/loan_trems"
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

			<include
				android:id="@+id/loan_installment"
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/blue_grey_900"
			android:id="@+id/duedate_linear"
			android:layout_marginTop="10dp"
			android:elevation="4dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="First Due Date"
				android:id="@+id/textView8"
				android:textColor="@color/deep_teal_200"
				android:layout_margin="10dp"
				android:visibility="gone"/>

			<include
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/firstdue_date"/>

			<include
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/finaldue_date"/>

			<include
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/setup_alarm"/>

			<include
				layout="@layout/saver_dialog_sub_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/alarm_time"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:background="@color/blue_grey_900"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="10dp"
			android:elevation="4dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Remarks"
				android:id="@+id/textView28"
				android:textColor="@color/deep_teal_200"
				android:layout_margin="10dp"
				android:visibility="gone"/>

			<include
				layout="@layout/saver_dialog_sub_ed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/address"/>

			<include
				layout="@layout/saver_dialog_sub_ed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/phone"/>

			<include
				layout="@layout/saver_dialog_sub_ed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:id="@+id/remarks"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>


