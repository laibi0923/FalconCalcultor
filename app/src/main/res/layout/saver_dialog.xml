<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_grey_900">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Title"
            android:id="@+id/dialog_sav_title"
            android:textColor="@color/deep_teal_200" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_sav_ch1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_sav_ch1_image1"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_sav_ch1_textview1"
            android:layout_weight="1.0"
            android:text="TextView1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_sav_ch2"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_sav_ch1_image2"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_sav_ch1_textview2"
            android:layout_weight="1.0"
            android:text="TextView1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_sav_ch3"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_sav_ch1_image3"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_sav_ch1_textview3"
            android:layout_weight="1.0"
            android:text="TextView1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_sav_ch4"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_sav_ch1_image4"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_sav_ch1_textview4"
            android:layout_weight="1.0"
            android:text="TextView1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_sav_ch5"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_sav_ch1_image5"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_sav_ch1_textview5"
            android:layout_weight="1.0"
            android:text="TextView1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cancel"
            android:id="@+id/dialog_sav_cancelbtn"
            android:textColor="@color/deep_teal_200"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />
    </LinearLayout>

</LinearLayout>
