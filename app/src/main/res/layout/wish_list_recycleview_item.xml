<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_layout"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/bottom_warp"
        android:orientation="vertical">

        <!--Edit Button-->
        <RelativeLayout
            android:id="@+id/edit_btn"
            android:clickable="true"
            android:background="@color/blue_grey_900"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!--Deleted Button-->
        <RelativeLayout
            android:id="@+id/del_btn"
            android:clickable="true"
            android:background="#910707"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_900">

        <LinearLayout
            android:id="@+id/top_warp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/loan_type_icon"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_marginRight="15dp"
                    android:tint="@color/deep_teal_200" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="UA Finance Company Limited"
                        android:id="@+id/name_tv"
                        android:textColor="@color/TextColor_White"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Apply status"
                            android:id="@+id/apply_status_tv"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="13dp"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="(Loan number)"
                            android:id="@+id/loan_number_tv"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="54"
                        android:id="@+id/loan_rate_tv"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="%"
                        android:id="@+id/textView5"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:tint="@color/deep_teal_200"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="$"
                            android:id="@+id/textView16"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="99999999.99"
                            android:id="@+id/loan_amount_tv"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:scrollHorizontally="true"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#999999"
                        android:id="@+id/sub_underline2"
                        android:visibility="visible" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="6 "
                            android:id="@+id/loan_trems_tv"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/textView20"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:ellipsize="end"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#999999"
                    android:id="@+id/sub_underline"
                    android:visibility="visible" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="$"
                        android:id="@+id/textView15"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/deep_teal_200"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="193939.00"
                        android:id="@+id/installment_tv"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/deep_teal_200"
                        android:singleLine="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/last_modify"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:textSize="13dp"
                        android:visibility="visible"
                        android:text="Last Modify : " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2017/11/09"
                        android:id="@+id/create_date_tv"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:textSize="13dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/remarks_tv"
                        android:minLines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="This is fucking company , loan limited too low and proof manager"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/alert_icon_im"
                        android:src="@drawable/ic_alarm_black_24dp"
                        android:tint="@color/deep_teal_200"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/textView4"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:textSize="13dp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</com.daimajia.swipe.SwipeLayout >
