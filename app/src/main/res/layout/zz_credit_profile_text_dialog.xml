<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/radius_textdialog_topbg"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:padding="20dp"
		android:id="@+id/cptd_edit_text"
		android:layout_weight="1">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_editor"
                android:textColor="@color/TextColor_Gray"
                android:textColorHint="@color/TextColor_Gray"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true" />

			<View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/TextColor_Gray"/>
		</LinearLayout>

		<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/text_dialog_recycleview"
    android:layout_weight="1"
    android:visibility="visible"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignEnd="@id/cptd_edit_text" />

	</LinearLayout>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_alignParentEnd="true"
		android:layout_alignParentStart="false"
		android:layout_alignParentBottom="true"
		android:clickable="true"
		android:background="@drawable/radius_textdialog_botbg">

		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="Enter"
			android:id="@+id/output_value_btn"
			android:background="?attr/selectableItemBackground"
			android:padding="20dp"
			android:textColor="@color/TextColor_Gray" />

	</LinearLayout>

</LinearLayout>

