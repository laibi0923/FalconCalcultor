<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_textdialog_topbg"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:id="@+id/text_dialog_title"
                android:textColor="@color/TextColor_Gray"
                android:textColorHint="@color/TextColor_Gray"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView8"
                android:src="@drawable/ic_done_all_black_48dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_editor"
            android:textColor="@color/TextColor_Gray"
            android:textColorHint="@color/TextColor_Gray"
            android:text="123132"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/transparent"
            android:paddingTop="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/TextColor_Gray"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_dialog_recycleview" />
</LinearLayout>
