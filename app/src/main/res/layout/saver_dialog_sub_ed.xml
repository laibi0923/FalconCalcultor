<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:gravity="top|center"
	android:layout_gravity="center"
	android:clickable="true"
	android:background="?attr/selectableItemBackground"
	android:id="@+id/sub_linear">

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:id="@+id/sub_image"
		android:tint="@color/deep_teal_200"
		android:layout_marginRight="20dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"/>

	<com.savtor.Credit_Profile.CreditProfile_TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="match_parent"
		android:padding="10dp"
		android:textColor="@color/TextColor_Gray"
		android:id="@+id/sub_textview"
		android:layout_weight="1"
		android:hint="TextView"
		android:textColorHint="@color/TextColor_Gray"/>

</LinearLayout>

