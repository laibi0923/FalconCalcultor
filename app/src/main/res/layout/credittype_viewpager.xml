<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="@color/blue_grey_950">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:clickable="true"
		android:gravity="center"
		android:padding="10dp"
		android:id="@+id/onclick_bg">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="@drawable/cirle_bg"
			android:padding="20dp"
			android:id="@+id/circle_bg">

			<ImageView
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:id="@+id/product_icon"
				android:src="@drawable/ic_person_black_48dp"
				android:tint="@color/deep_teal_200"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Personal Loan"
		android:id="@+id/product_title"
		android:textColor="@color/deep_teal_200"
		android:paddingTop="25dp"/>

</LinearLayout>

