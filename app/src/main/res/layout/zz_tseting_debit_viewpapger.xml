<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_950">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/blue_grey_800">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="私人貸款"
            android:id="@+id/textView5"
            android:textColor="@color/TextColor_Gray"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="已紀錄批核戶口共 18  項"
            android:id="@+id/textView8"
            android:textColor="@color/TextColor_Gray"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="總貸款銀碼 $ 100,000,000.00"
            android:id="@+id/textView13"
            android:textColor="@color/TextColor_Gray"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="預計總利息支出 $ 100,000,000.00"
            android:id="@+id/textView14"
            android:textColor="@color/TextColor_Gray"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="每月共支出 $ 18, 000.00"
            android:id="@+id/textView16"
            android:textColor="@color/TextColor_Gray"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="每月利息支出 $ 18, 000.00"
            android:id="@+id/textView17"
            android:textColor="@color/TextColor_Gray"
            android:padding="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="80dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_person_black_48dp"
                android:tint="@color/blue_grey_900" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="檢視我的私人貸款戶口"
                android:id="@+id/textView19"
                android:textColor="@color/TextColor_Gray"
                android:padding="3dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
