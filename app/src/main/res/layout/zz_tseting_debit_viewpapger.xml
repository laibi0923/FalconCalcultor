<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/blue_grey_950">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:minHeight="100dp"
		android:paddingTop="50dp"
		android:paddingBottom="50dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/cirle_bg"
				android:clickable="false"
				android:gravity="center"
				android:padding="20dp"
				android:layout_alignParentStart="false"
				android:layout_alignParentEnd="true"
				android:id="@+id/tset_icon">

				<ImageView
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:id="@+id/product_type_icon"
					android:src="@drawable/ic_person_black_48dp"
					android:tint="@color/blue_grey_900" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/cirle_bg"
				android:clickable="false"
				android:gravity="center"
				android:layout_alignParentEnd="false"
				android:layout_alignParentStart="false"
				android:layout_alignEnd="@id/tset_icon">

				<TextView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="99"
					android:id="@+id/total_count"
					android:layout_alignParentEnd="false"
					android:gravity="center"
					android:textColor="@color/TextColor_Gray" />
			</RelativeLayout>
		</RelativeLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:padding="10dp"
			android:layout_weight="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Personal Loan"
				android:id="@+id/product_type"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:textColor="@color/TextColor_Gray"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="15dp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/cirle_bg"
				android:gravity="center"
				android:padding="10dp"
				android:clickable="true"
				android:id="@+id/product_review_btn">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Review"
					android:id="@+id/textView20"
					android:layout_centerVertical="true"
					android:layout_centerHorizontal="true"
					android:textColor="@color/TextColor_Gray" />
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="$ 10,000,000.00"
				android:id="@+id/total_amount"
				android:textColor="@color/TextColor_Gray" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="總貸款額"
				android:id="@+id/textView24"
				android:textColor="@color/TextColor_Gray" />
		</LinearLayout>

		<View
			android:layout_width="0.1dp"
			android:layout_height="match_parent"
			android:background="@color/TextColor_Gray" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="$10,000.00"
				android:id="@+id/total_payment"
				android:textColor="@color/TextColor_Gray" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="每月支出"
				android:id="@+id/textView34"
				android:textColor="@color/TextColor_Gray" />
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:background="@color/TextColor_Gray" />

</LinearLayout>

