<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_grey_900">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Title"
            android:id="@+id/dialog_title"
            android:textColor="@color/deep_teal_200"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp"
        android:id="@+id/dialog_option1">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_option1_icon"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_option1_text"
            android:layout_weight="1.0"
            android:text="TextView1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_option2"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_option2_icon"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_option2_text"
            android:layout_weight="1.0"
            android:text="TextView1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_option3"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_option3_icon"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_option3_text"
            android:layout_weight="1.0"
            android:text="TextView1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_option4"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_option4_icon"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_option4_text"
            android:layout_weight="1.0"
            android:text="TextView1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_option5"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/dialog_option5_icon"
            android:tint="@color/deep_teal_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/TextColor_Gray"
            android:id="@+id/dialog_option5_text"
            android:layout_weight="1.0"
            android:text="TextView1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/calcultor_dialog_NegativeButton"
            android:id="@+id/dialog_dismiss"
            android:textColor="@color/deep_teal_200"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </LinearLayout>

</LinearLayout>

