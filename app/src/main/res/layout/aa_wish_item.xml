<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center"
	android:paddingBottom="10dp">

	<LinearLayout
		android:background="@drawable/wishlist_top_bg"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:padding="20dp">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="2018/01/23"
					android:layout_weight="1.0"
					android:textColor="@color/TextColor_Gray"
					android:id="@+id/last_modfiy"/>

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:tint="@color/deep_teal_200"
					android:src="@drawable/ic_alarm_black_24dp"
					android:layout_gravity="right"
					android:id="@+id/alarm_icon"/>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="tuxutcuyciycicicuycyicyicyiviyviycyicyicyiviyvyivyiviyvyivyivkubuk ih yi yiviyviycyivyicyicyivyivyi yi yi yi iy ucyucyicyicyicyicyivyicyicyiciyciyvyiviciyfyif6ididtuxitxuxyixutctixyicyiciyxyixyicyixyixutxtixiyxtixyixitxitxiyciyckyckycutxjycyjchkvykcyicyixyjxiyxutxtuxutxtuxitxyjciytixutxutyviui"
				android:layout_gravity="left"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:maxLines="4"
				android:ellipsize="end"
				android:textColor="@color/TextColor_Gray"
				android:id="@+id/wishlist_remark"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/cirle_bg"
				android:orientation="horizontal"
				android:padding="15dp"
				android:layout_margin="10dp">

				<ImageView
					android:src="@drawable/ic_person_black_48dp"
					android:layout_height="100dp"
					android:layout_width="100dp"
					android:tint="@color/blue_grey_900"
					android:id="@+id/product_type_icon"/>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:text="XXXXXX Company Limited"
				android:textAlignment="center"
				android:textColor="@color/TextColor_Gray"
				android:id="@+id/product_name"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="成功批核"
				android:textColor="@color/TextColor_Gray"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:id="@+id/approval_status"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="00-000000-000"
				android:textColor="@color/TextColor_Gray"
				android:id="@+id/loan_number"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/wishlist_bot_bg"
		android:paddingLeft="20dp"
		android:paddingRight="20dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:paddingTop="20dp"
			android:paddingBottom="20dp">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="借貸金額 ： $ 10,000,000.00"
					android:textColor="@color/TextColor_Gray"
					android:id="@+id/loan_amount"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="償還期限 : 6 個月"
					android:textColor="@color/TextColor_Gray"
					android:paddingBottom="3dp"
					android:paddingTop="3dp"
					android:id="@+id/loan_trems"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="借貸年利率 ： 54.00 % p.a."
					android:textColor="@color/TextColor_Gray"
					android:id="@+id/loan_rate"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:gravity="bottom">

				<TextView
					android:textColor="@color/deep_teal_200"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="$19390000.00"
					android:layout_gravity="right"
					android:id="@+id/loan_installment"/>

			</LinearLayout>

		</LinearLayout>

		<View
			android:background="@color/TextColor_Gray"
			android:layout_height="0.5dp"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:clickable="true"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:id="@+id/edit_btn">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:text="修改"
					android:clickable="false"
					android:padding="10dp"
					android:textAlignment="center"
					android:gravity="center"
					android:textColor="@color/deep_teal_200"
					android:id="@+id/edit_text"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:clickable="true"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:id="@+id/del_btnn">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="刪除"
					android:clickable="false"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:gravity="center"
					android:padding="10dp"
					android:textColor="@color/TextColor_Gray"
					android:id="@+id/del_text"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

