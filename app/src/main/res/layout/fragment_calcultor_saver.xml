<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"

	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/fragment_bg">


	<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:textColor="@color/normal_textcolor"
            android:id="@+id/save_name"
            android:hint="輸入名稱"
			android:padding="15dp"
			android:textColorHint="@color/normal_textcolor"
			android:background="@color/colorPrimaryDark" />

    </LinearLayout>

	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:elevation="4dp">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp">

					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:id="@+id/imageView10"
						android:src="@drawable/ic_location_on_black_24dp"
						android:layout_marginRight="20dp" />

					<Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/loan_type_spinner"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:paddingLeft="10dp"
					android:paddingRight="10dp">

					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:id="@+id/imageView11"
						android:src="@drawable/ic_location_on_black_24dp"
						android:layout_marginRight="20dp" />

					<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/apply_status_spinner"
						android:layout_weight="1" />
				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:paddingLeft="10dp"
					android:id="@+id/loan_num_linear">

					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:id="@+id/imageView6"
						android:src="@drawable/ic_location_on_black_24dp"
						android:layout_marginRight="20dp" />

					<EditText
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:ems="10"
						android:hint="貸款編號"
						android:id="@+id/save_loan_num"
						android:textColor="@color/normal_textcolor"
						android:background="@color/colorPrimary"
						android:padding="10dp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:background="@color/colorPrimary"
				android:elevation="4dp"
				android:padding="10dp"
				android:id="@+id/saver_details_linear">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="First Due Date"
					android:id="@+id/textView8"
					android:textColor="@color/accent"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/fragment_bg"
					android:layout_margin="10dp">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:padding="10dp"
						android:clickable="true"
						android:background="?attr/selectableItemBackground"
						android:id="@+id/saver_datepicker">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:text="YYYY/MM/DD"
							android:id="@+id/saver_first_duedate"
							android:textColor="@color/accent"/>

					</RelativeLayout>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:padding="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<RadioGroup
						android:id="@+id/due_date_type"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<RadioButton
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Normal Date"
							android:id="@+id/normal_duedate_rb"
							android:layout_weight="1"
							android:checked="false"/>

						<RadioButton
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="End of Month"
							android:id="@+id/eom_duedate_rb"
							android:layout_weight="1"
							android:checked="false"/>

					</RadioGroup>

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Final Due Date"
					android:id="@+id/textView17"
					android:textColor="@color/accent"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/fragment_bg"
					android:layout_margin="10dp">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:padding="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:text="YYYY/MM/DD"
							android:id="@+id/saver_final_duedate"
							android:textColor="@color/normal_textcolor"/>

					</RelativeLayout>

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Alert Date"
					android:id="@+id/textView26"
					android:textColor="@color/accent"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/fragment_bg"
					android:layout_margin="10dp">

					<Spinner
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/alert_date_spinner"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:background="@color/colorPrimary"
				android:elevation="4dp"
				android:layout_marginBottom="20dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Remarks"
					android:id="@+id/textView28"
					android:textColor="@color/accent"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:orientation="horizontal"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp">

						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:id="@+id/imageView4"
							android:src="@drawable/ic_location_on_black_24dp"
							android:layout_marginRight="20dp" />

						<EditText
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:ems="10"
							android:layout_weight="1"
							android:hint="地址"
							android:id="@+id/save_address"
							android:textColor="@color/normal_textcolor"
							android:background="@color/colorPrimary"
							android:padding="10dp"
							android:singleLine="true" />

					</LinearLayout>

					<LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:gravity="top">

						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:id="@+id/imageView5"
							android:src="@drawable/ic_location_on_black_24dp"
							android:layout_marginRight="20dp" />

						<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:id="@+id/save_remarks"
                            android:textColor="@color/normal_textcolor"
							android:hint="備忘錄"
							android:background="@color/colorPrimary"
							android:padding="10dp" />
					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>


</LinearLayout>
