<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/fragment_bg"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="top|center"
		android:padding="20dp"
		android:layout_weight="1.0">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center">

			<ImageView
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:id="@+id/imageView5"
				android:src="@drawable/falcon_icon_white"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp">

				<EditText
					android:background="@color/fragment_bg"
					android:focusableInTouchMode="true"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="numberPassword"
					android:id="@+id/password_edittext"
					android:padding="10dp"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="bottom">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num1"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num2"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num3"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num4"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num5"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num6"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num7"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num8"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num9"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num_clear"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num0"/>

				<include
					layout="@layout/password_keybord"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/inculde_num_done"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

