<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_layout"
    android:layout_marginBottom="10dp"
    android:elevation="4dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/bottom_warp"
        android:orientation="vertical" >

        <!--Edit Button-->
        <RelativeLayout
            android:id="@+id/edit_btn"
            android:clickable="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!--Deleted Button-->
        <RelativeLayout
            android:id="@+id/del_btn"
            android:clickable="true"
            android:background="#910707"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/top_warp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loan_type_icon"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_marginRight="15dp"
                    android:tint="@color/accent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="UA Finance Company Limited"
                        android:id="@+id/name_tv"
                        android:textColor="@color/normal_textcolor"
                        android:ellipsize="end"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Apply Status"
                        android:id="@+id/apply_status_tv"
                        android:textColor="@color/switch_thumb_normal_material_dark"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alert_icon_im"
                    android:src="@drawable/ic_alarm_black_24dp"
                    android:tint="@color/accent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:tint="@color/accent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="$"
                        android:id="@+id/textView16"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="5,00000000.00"
                        android:id="@+id/loan_amount_tv"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:layout_weight="1"
                        android:textColor="@color/accent"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="54"
                            android:id="@+id/loan_rate_tv"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="%"
                            android:id="@+id/textView5"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:ellipsize="end"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="6 "
                            android:id="@+id/loan_trems_tv"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Trems"
                            android:id="@+id/textView20"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textColor="@color/switch_thumb_normal_material_dark"
                            android:ellipsize="end"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#999999"
                    android:id="@+id/sub_underline" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="$"
                        android:id="@+id/textView15"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/normal_textcolor"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1933339.00000"
                        android:id="@+id/installment_tv"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/normal_textcolor"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/remarks_tv"
                    android:minLines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:text="This is fucking company , loan limited too low and proof manager"
                    android:textColor="@color/switch_thumb_normal_material_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Last Modfiy : "
                    android:id="@+id/textView11"
                    android:textColor="@color/switch_thumb_normal_material_dark"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2017/11/09"
                    android:id="@+id/create_date_tv"
                    android:textColor="@color/switch_thumb_normal_material_dark"
                    android:textSize="13dp"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</com.daimajia.swipe.SwipeLayout >
